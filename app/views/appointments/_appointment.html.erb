<div class="pb-2">
  <p>
    Date: <%= appointment.period_start.in_time_zone.to_date.to_formatted_s(:long) %>
  </p>
  <p>
    Time: <%= appointment.period_start.in_time_zone.strftime("%H:%M") %>-<%= appointment.period_end.in_time_zone.strftime("%H:%M") %>
  </p>
  <p>
    Type: <%= appointment.appointment_type %>
  </p>
  <p>
    Status: <%= appointment.status.humanize %>
  </p>
  <% if appointment.status_finished? && appointment.feedback_response.nil? %>
    <%= link_to 'Provide feedback', new_appointment_feedback_response_path(appointment_id: appointment.id), class: "text-blue-600 visited:text-purple-600" %>
  <% elsif appointment.feedback_response.present? %>
    <%= link_to 'See feedback', appointment_feedback_response_path(appointment_id: appointment.id, id: appointment.feedback_response.id), class: "text-blue-600 visited:text-purple-600" %>
  <% end %>
</div>

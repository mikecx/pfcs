<div class="p-2">
  <h2 class="text-2xl font-bold">
    <%= @doctor.name %>
  </h2>
  <div class="py-2">
    Average rating: <%= @mean_nps %>
  </div>
  <div class="py-2">
    <h3 class="text-xl font-semibold">Appointments</h3>
    <% @doctor.appointments.order(period_end: :desc).each do |appointment| %>
      <%= render "appointments/appointment", appointment: %>
    <% end %>
  </div>
</div>
